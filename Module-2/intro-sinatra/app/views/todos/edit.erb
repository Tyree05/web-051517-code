<form action="/todos/<%= @todo.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <label for="todo_title">Title</label>
  <input type="text" name="todo[title]" id="todo_title" value="<%= @todo.title %>"/>
  <p>
    <% if @todo.complete %>
    <input class="with-gap" type="checkbox" checked name="todo[complete]" id="todo_complete"/>
  <% else %>
    <input class="with-gap" type="checkbox" name="todo[complete]" id="todo_complete"/>
    <% end %>
    <label for="todo_complete">Complete</label>
  </p>
  <button class="waves-effect waves-light btn" type="submit">Update</button>
</form>
<% if @error %>
<div class="">
  <%= @error %>
</div>
<% end %>
